{{page-title 'Shopping Cart'}}
<GeneralContainer>
  <h1>Shopping Cart</h1>
  <!-- This example requires Tailwind CSS v2.0+ -->
  <nav class='flex' aria-label='Breadcrumb' class='mt-4'>
    <ol role='list' class='flex items-center space-x-4'>
      <li>
        <div>
          <LinkTo @route='index' class='text-gray-400 hover:text-gray-500'>
            <HomeIcon />
            <span class='sr-only'>Home</span>
          </LinkTo>
        </div>
      </li>

      <li>
        <div class='flex items-center'>
          <ChevronIcon />
          <span class='ml-4 text-sm font-medium'>Shopping Cart</span>
        </div>
      </li>
    </ol>
  </nav>
  <section class='text-right grid gap-2 grid-cols-summary mt-4 justify-end'>
    <span>Subtotal</span>
    <span>{{this.subtotal}}</span>
    <span>Tax</span>
    <span>{{this.tax}}</span>
    <span>Total</span>
    <span>{{this.total}}</span>
  </section>
  <div class='flex justify-end mt-8'>
    <Button>
      Submit Order
    </Button>
  </div>
</GeneralContainer>